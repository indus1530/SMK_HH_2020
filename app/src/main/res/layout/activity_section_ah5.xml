<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_smk_hh.ui.sections.SectionAH5Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.Myactivity">

        <LinearLayout
            android:id="@+id/fldGrpSectionAH5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ahnktitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVahnktitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ahnktitle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah33  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah33" />

                    <CheckBox
                        android:id="@+id/ah33a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah33a" />

                    <CheckBox
                        android:id="@+id/ah33b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah33b" />

                    <CheckBox
                        android:id="@+id/ah33c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah33c" />

                    <CheckBox
                        android:id="@+id/ah33d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah33d" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah34  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah34" />

                    <RadioGroup
                        android:id="@+id/ah34"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ah34a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah34a" />

                        <RadioButton
                            android:id="@+id/ah34b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah34b" />

                        <RadioButton
                            android:id="@+id/ah34c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah34c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah35  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah35" />

                    <CheckBox
                        android:id="@+id/ah35a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35a" />

                    <CheckBox
                        android:id="@+id/ah35b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35b" />

                    <CheckBox
                        android:id="@+id/ah35c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35c" />

                    <CheckBox
                        android:id="@+id/ah35d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35d" />

                    <CheckBox
                        android:id="@+id/ah35e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35e" />

                    <CheckBox
                        android:id="@+id/ah35f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35f" />

                    <CheckBox
                        android:id="@+id/ah35g"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35g" />

                    <CheckBox
                        android:id="@+id/ah35h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35h" />

                    <CheckBox
                        android:id="@+id/ah35i"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35i" />

                    <CheckBox
                        android:id="@+id/ah35j"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah35j" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah36  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah36" />

                    <RadioGroup
                        android:id="@+id/ah36"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ah36a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah36a" />

                        <EditText
                            android:id="@+id/ah36ax"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="12dp"
                            android:hint="@string/ah36a"
                            android:tag="ah36a"
                            android:text='@{ah36a.checked? ah36ax.getText().toString() : ""}'
                            android:visibility='@{ah36a.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/ah36b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah36b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>