<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_smk_hh.ui.sections.SectionAH5Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.Myactivity">

        <LinearLayout
            android:id="@+id/fldGrpSectionAH5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ahnktitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVahnktitle"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/ahnktitle" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ah33  Checkbox   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah33"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/ah33" />

                    <LinearLayout
                        android:id="@+id/AH33check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="0">

                        <CheckBox
                            android:id="@+id/ah33a"
                            style="@style/checkbox"
                            android:text="@string/ah33a" />

                        <CheckBox
                            android:id="@+id/ah33b"
                            style="@style/checkbox"
                            android:text="@string/ah33b" />

                        <CheckBox
                            android:id="@+id/ah33c"
                            style="@style/checkbox"
                            android:text="@string/ah33c" />

                        <CheckBox
                            android:id="@+id/ah33d"
                            style="@style/checkbox"
                            android:text="@string/ah33d" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ah34  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah34"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/ah34" />

                    <RadioGroup
                        android:id="@+id/ah34"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/ah34a"
                            style="@style/radiobutton"
                            android:text="@string/ah34a" />

                        <RadioButton
                            android:id="@+id/ah34b"
                            style="@style/radiobutton"
                            android:text="@string/ah34b" />

                        <RadioButton
                            android:id="@+id/ah34c"
                            style="@style/radiobutton"
                            android:text="@string/ah34c" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ah35  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah35"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/ah35" />

                    <LinearLayout
                        android:id="@+id/AH35check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="0">

                        <CheckBox
                            android:id="@+id/ah35a"
                            style="@style/checkbox"
                            android:text="@string/ah35a" />

                        <CheckBox
                            android:id="@+id/ah35b"
                            style="@style/checkbox"
                            android:text="@string/ah35b" />

                        <CheckBox
                            android:id="@+id/ah35c"
                            style="@style/checkbox"
                            android:text="@string/ah35c" />

                        <CheckBox
                            android:id="@+id/ah35d"
                            style="@style/checkbox"
                            android:text="@string/ah35d" />

                        <CheckBox
                            android:id="@+id/ah35e"
                            style="@style/checkbox"
                            android:text="@string/ah35e" />

                        <CheckBox
                            android:id="@+id/ah35f"
                            style="@style/checkbox"
                            android:text="@string/ah35f" />

                        <CheckBox
                            android:id="@+id/ah35g"
                            style="@style/checkbox"
                            android:text="@string/ah35g" />

                        <CheckBox
                            android:id="@+id/ah35h"
                            style="@style/checkbox"
                            android:text="@string/ah35h" />

                        <CheckBox
                            android:id="@+id/ah35i"
                            style="@style/checkbox"
                            android:text="@string/ah35i" />

                        <CheckBox
                            android:id="@+id/ah35j"
                            style="@style/checkbox"
                            android:text="@string/ah35j" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ah36  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah36"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/ah36" />

                    <RadioGroup
                        android:id="@+id/ah36"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/ah36a"
                            style="@style/radiobutton"
                            android:text="@string/ah36a" />

                        <EditText
                            android:id="@+id/ah36ax"
                            style="@style/EditTextNum"
                            android:hint="@string/ah36a"
                            android:tag="ah36a"
                            android:text='@{ah36a.checked? ah36ax.getText().toString() : ""}'
                            android:visibility='@{ah36a.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/ah36b"
                            style="@style/radiobutton"
                            android:text="@string/ah36b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</layout>