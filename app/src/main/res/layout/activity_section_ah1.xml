<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_smk_hh.ui.sections.SectionAH1Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.Myactivity">

        <LinearLayout
            android:id="@+id/fldGrpSectionAH1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ah0title  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah0title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah0title" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ahetitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVahetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ahetitle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah1  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah1" />

                    <RadioGroup
                        android:id="@+id/ah1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ah1a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1a" />

                        <RadioButton
                            android:id="@+id/ah1b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1b" />

                        <RadioButton
                            android:id="@+id/ah1c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1c" />

                        <RadioButton
                            android:id="@+id/ah1d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1d" />

                        <RadioButton
                            android:id="@+id/ah1e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1e" />

                        <RadioButton
                            android:id="@+id/ah1f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1f" />

                        <RadioButton
                            android:id="@+id/ah1g"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1g" />

                        <RadioButton
                            android:id="@+id/ah1h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1h" />

                        <RadioButton
                            android:id="@+id/ah1i"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1i" />

                        <RadioButton
                            android:id="@+id/ah1j"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1j" />

                        <RadioButton
                            android:id="@+id/ah1k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah1k" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah2  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah2" />

                    <RadioGroup
                        android:id="@+id/ah2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ah2a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah2a" />

                        <RadioButton
                            android:id="@+id/ah2b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah2b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah3  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah3" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/ah3"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/ah3"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="100"
                        app:minValue="0"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah4  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah4" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/ah4"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/ah4"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="100"
                        app:minValue="0"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah5  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah5" />

                    <RadioGroup
                        android:id="@+id/ah5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ah5a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah5a" />

                        <RadioButton
                            android:id="@+id/ah5b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah5b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah6  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah6" />

                    <RadioGroup
                        android:id="@+id/ah6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ah6a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah6a" />

                        <RadioButton
                            android:id="@+id/ah6b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah6b" />

                        <RadioButton
                            android:id="@+id/ah6c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ah6c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ah7  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVah7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah7" />

                    <CheckBox
                        android:id="@+id/ah7a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7a" />

                    <CheckBox
                        android:id="@+id/ah7b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7b" />

                    <CheckBox
                        android:id="@+id/ah7c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7c" />

                    <CheckBox
                        android:id="@+id/ah7d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7d" />

                    <CheckBox
                        android:id="@+id/ah7e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7e" />

                    <CheckBox
                        android:id="@+id/ah7f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7f" />

                    <CheckBox
                        android:id="@+id/ah7g"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7g" />

                    <CheckBox
                        android:id="@+id/ah7h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ah7h" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/ah7x" />

                    <EditText
                        android:id="@+id/ah7x"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/ah7x" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>